@model activity4.Models.DoctorViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .row {
        padding: 20px;

        text-align: left;
    }

    .row2 {
        background-color: #E2E5DE;
    }
    .h1 {
        margin-top: 100px;
    }
</style>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-3 row2">
        <form asp-action="Edit">
            <h1 class="h1">Doctor Edit</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DoctorID" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorType" class="control-label"></label>
                <input asp-for="DoctorType" class="form-control" />
                <span asp-validation-for="DoctorType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNo" class="control-label"></label>
                <input asp-for="ContactNo" class="form-control" />
                <span asp-validation-for="ContactNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule" class="control-label"></label>
                <input asp-for="Schedule" class="form-control" />
                <span asp-validation-for="Schedule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MOP" class="control-label"></label>
                <input asp-for="MOP" class="form-control" />
                <span asp-validation-for="MOP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
    <div class="col-md-7">
        <img src="https://i.pinimg.com/originals/29/f0/1b/29f01b7bda64bb6347c1e42b2db8bfc5.png" style="height:70%;" />
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
